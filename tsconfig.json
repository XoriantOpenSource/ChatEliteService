{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "noEmitOnError": false,
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "target": "es6",
        "lib": [
            "es6"
        ],
        "typeRoots": [
            "types"
        ]
    },
    "compileOnSave": true
}